.data{
 
  padding-top: 5%;
 
  border-bottom: 2rpx solid #ccc;
 
  height: 200rpx;
 
}
 
.left{
 
  width: 20%;
 
  float: left;
 
  text-align: center;
 
  visibility: middle;
 
}
 
.left .img{
 
  padding-left: 10%;
 
  width: 110rpx;
 
  height: 100rpx;
 
}
 
.left .img image{
 
  width: 100%;
 
  height: 100%;
 
}
 
.right{
 
  width: 80%;
 
  float: right
 
}
 
.right .title{
 
  display: block;
 
  color: #2e5cf1;
 
  font-size: 36rpx;
 
  font-weight: bold;
 
}
 
.right .content{
 
  display: block;
 
  font-size: 26rpx;
 
  margin-top: 10rpx;
 
}
 
.right .time{
 
  display: block;
 
  font-size: 24rpx;
 
  color: #999;
 
  margin-top: 10rpx;
 
}