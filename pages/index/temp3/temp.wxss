.data{
  display: flex;

  align-items: center;

  padding: 5% 0;
 
  border-bottom: 2rpx solid #ccc;
 
}
 
.left{
 
  width: 20%;
 
  float: left;
 
  text-align: center;
 
  visibility: middle;
 
}
 
.left .img{
 
  padding-left: 10%;
 
  width: 110rpx;
 
  height: 100rpx;
 
}
 
.left .img image{
 
  width: 100%;
 
  height: 100%;
 
}
 
.right{
 
  width: 80%;
 
  float: right
 
}
 
.right .title{
 
  display: block;
 
  color: #666;
 
  font-size: 30rpx;
 
  font-weight: bold;
 
  text-overflow: ellipsis;

  overflow: hidden;

  white-space: nowrap;
}
 
.right .content{
 
  display: block;
 
  font-size: 26rpx;
 
  margin-top: 10rpx;
 
  text-overflow: ellipsis;

  overflow: hidden;

  white-space: nowrap;
}
 
.right .time {

 width: 100%;
 
 display: block;

}
.right .time .date{

  float: left;

  font-size: 24rpx;
 
  color: #999;
 
  margin: 10rpx 0;
}
.right .time .price{
  float: right;

  font-size: 24rpx;
 
  color: rgb(241, 159, 7);
 
  margin: 10rpx 40rpx;
}
.right .time .price1{
  float: right;

  font-size: 24rpx;
 
  color: #999;
 
  margin: 10rpx 40rpx;
}